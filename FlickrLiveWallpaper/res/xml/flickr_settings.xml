<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
        android:title="@string/flickr_settings"
        android:key="flickrpaper_settings">

    <ListPreference
            android:key="flickr_scale"
            android:title="@string/flickr_settings_size_title"
            android:summary="@string/flickr_settings_size_summary"
            android:entries="@array/flickr_scaling_options"
            android:entryValues="@array/flickr_scaling_options_values" />
            
    <ListPreference
            android:key="flickr_action"
            android:title="@string/flickr_settings_tap_title"
            android:entries="@array/flickr_action_tap_options"
            android:entryValues="@array/flickr_action_tap_values" />
            
     <EditTextPreference 
            android:key="flickr_info"
            android:selectable="false"
            android:title="@string/flickr_settings_readme_title"
            android:summary="@string/flickr_settings_info"
            android:layout="@xml/pref_long_text"/>
            
</PreferenceScreen>
